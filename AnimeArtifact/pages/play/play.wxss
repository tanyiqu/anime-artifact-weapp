/* pages/play/play.wxss */
Page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.video {
  width: 100%;
  height: 400rpx;
  margin: 0;
}

.rate-action {
  margin: 0;
  display: flex;
}

.rate-action view {
  flex: 1;
  height: 75rpx;
  margin: 0 1rpx;

  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  border: solid 1px #000;

  background: #fff;

}

.rate-action view:active {
  background: #f00;
}